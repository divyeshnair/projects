<BajaInitial>:
    BoxLayout:
        orientation:'vertical'
        canvas.before:
            BorderImage:
                source: 'img/image9.png'
                pos: self.pos
                size: self.size
            
        Label:
            text:"The AshwaRiders"
            font_size:60
<BajaFirst>:
    BoxLayout:
        orientation:'vertical'
        spacing:40
        canvas.before:
            BorderImage:
                source: 'img/images6.jpeg'
                pos: self.pos
                size: self.size
        Label:
            text:"Data Acquisition System "
            font_size:50
        
        
        Label:
            text:"Enter Your Constraints "
            font_size:40
            
        GridLayout:
            cols:4
            orientation:"vertical"
            row_default_height: "40dp"
            row_force_default: True
            spacing:'30dp'
            Label:
                text: "Load(Kg):"
            	font_size:25
            TextInput:
                id:lo
            Label:
                text: "Normal force(N):"
                font_size:25
            TextInput:
                id:nf             
            Label:
                text: "Mass(Kg):"
                font_size:25
            TextInput:
                id:ma
            Label:
                text: "dx(m):"
                font_size:25
            TextInput:
                id:dx
            Label:
                text: "Y():"
                font_size:25
            TextInput: 
                id:yy
        Button:
            size_hint_y: None
            size_hint_x:None
            size_hint:1,0.2
            text: "Go"
                
            on_press:root.foto(lo.text,nf.text,ma.text,dx.text,yy.text) 
                    
